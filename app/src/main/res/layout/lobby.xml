<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Lobby_BTN_Disonnect"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Leave Lobby"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Lobby_BTN_Ready"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Ready?"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toEndOf="@+id/Lobby_BTN_Disonnect" />

    <TextView
        android:id="@+id/Lobby_Textview_Title"
        android:layout_width="405dp"
        android:layout_height="54dp"
        android:text="Multipong"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/Lobby_Scrollview_Players"
        android:layout_width="409dp"
        android:layout_height="366dp"
        app:layout_constraintBottom_toTopOf="@+id/Lobby_TextView_StartVelocity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lobby_Textview_Title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/Lobby_TextView_StartVelocity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Start Velocity"
        app:layout_constraintBottom_toTopOf="@+id/Lobby_SeekBar_StartVelocity"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/Lobby_SeekBar_StartVelocity"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="360dp"
        android:layout_height="28dp"
        android:clickable="true"
        android:max="10"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/Lobby_TextView_VelocityGain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/Lobby_SeekBar_VelocityGain"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="356dp"
        android:layout_height="25dp"
        android:max="10"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/Lobby_TextView_EndPoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Lobby_TextView_EndPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="End Points"
        app:layout_constraintBottom_toTopOf="@+id/Lobby_SeekBar_EndPoints"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Lobby_TextView_VelocityGain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Velocity Gain"
        app:layout_constraintBottom_toTopOf="@+id/Lobby_SeekBar_VelocityGain"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/Lobby_SeekBar_EndPoints"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="356dp"
        android:layout_height="23dp"
        android:layout_marginBottom="12dp"
        android:max="10"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/Lobby_BTN_Disonnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/Lobby_ImageView_ClientInfo"
        android:layout_width="415dp"
        android:layout_height="433dp"
        app:layout_constraintBottom_toTopOf="@+id/Lobby_SeekBar_StartVelocity"
        app:layout_constraintEnd_toEndOf="@+id/Lobby_Scrollview_Players"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lobby_Textview_Title"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/mitte" />

</android.support.constraint.ConstraintLayout>